{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "~/assets": ["./src/assets"],
      "~/assets/*": ["./src/assets/*"],
      "~/components": ["./src/components"],
      "~/components/*": ["./src/components/*"],
      "~/constants": ["./src/constants"],
      "~/constants/*": ["./src/constants/*"],
      "~/hooks": ["./src/hooks"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/navigation": ["./src/navigation"],
      "~/navigation/*": ["./src/navigation/*"],
      "~/providers": ["./src/providers"],
      "~/providers/*": ["./src/providers/*"],
      "~/screens": ["./src/screens"],
      "~/screens/*": ["./src/screens/*"],
      "*": [
        "./node_modules/*",
        "./node_modules/@types/*",
      ]
    },
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node"
  }
}
